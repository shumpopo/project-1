MDScreen:
    name: 'login'
    size_hint: .7,.9
    pos_hint: {"center_x":.5, "center_y":.5}


    BoxLayout:
        orientation: 'vertical'
        padding: 4
        spacing: 10

        Image:
            source: "logo.gif"
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 5)
        Label:
            text: 'Login'
            font_size: '24sp'
            color: 1, 0, 0, 1

        TextInput:
            id: stud_id
            hint_text:'Student ID'
            icon_right:'account'
            padding: 10
            font_size: '18sp'
            radius: 10,

        TextInput:
            id: password
            hint_text: 'Password'
            icon_right: 'eye-off'
            password: True
            padding: 10
            font_size: '18sp'
            color: 0, 0, 0, 0


        Button:
            text: 'Login'
            size_hint: None, None
            size: 100, 40
            background_color: 255, 0, 0, 1
            pos_hint: {'center_x': 0.5}
            on_press:
                app.login(stud_id.text, password.text)
                app.show_login_result(True)
                app.root.current='Drawer'
        Label:
            text: 'Not registered yet?'
            font_size: '12sp'
            padding: 100
            color: 1, 0, 0, 1

        Button:
            text: 'Register'
            size_hint: None, None
            size: 100, 40
            padding: 1
            background_color: 255, 0, 0, 1
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'Register'

        Button:
            background_color: 255, 255, 255, 1
            on_release: app.root.current = 'Admin'
            Image:
                source: 'img.png'
                size: "20dp", "20dp"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Button:
            size_hint: None, None
            size: 100,60
            background_color: 1,0,0,1
            pos_hint: {'center_x': 0.5, 'center_y': 0}
            on_release: app.root.current = 'admin'
        Image:
            source: 'admin.jpg'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

