MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "logo.gif"
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .8}

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .45}

            MDFloatLayout:
                size_hint: .5, .8
                pos_hint: {"center_x": .5, "center_y": -1}
                canvas:
                    Color:
                        rgb: (1, 0, 0, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [22, 22, 22, 22,]

            Button:
                text:"Let's go"
                size_hint: .85, .8
                pos_hint: {"center_x": .5, "center_y": -1}
                background_color: 0,0,0,0
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "login"
